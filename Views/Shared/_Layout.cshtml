<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)

</head>
<body>
    <div class="header">
        Knockout Js
    
    </div>

    <div class="main">
        <div class="leftpanel"> 
<div class="menu">
        <ol>
            <li> @Html.ActionLink("Click Counter","Index")  </li>
            <li> @Html.ActionLink("Multiline TextBox","MultilineTextBox")  </li>
            <li> @Html.ActionLink("Password","Password")  </li>
            <li> @Html.ActionLink("jQuery Tree View","Index","Tree")  </li>

        </ol>
    </div>

        </div>
        <div class="rightpanel"> 
    @RenderBody()
            </div>
        </div>
    <div class="footer">
        copyright 2013

    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {

            //alert($('body').scrollHeight);
            //alert($(window).height());
            if (document.getElementsByTagName('html').scrollHeight < document.body.clientHeight)
            //if ($(document).scrollHeight < $(window).height())
            {
                $(".footer").addClass("footerfixed");
            }
            else {
                if ($(".footer").hasClass("footerfixed"))
                    $(".footer").removeClass("footerfixed");
            }
        });

    </script>
</body>
</html>
